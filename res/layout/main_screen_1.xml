    <ScrollView       
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/scroll" 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <ImageView
        android:id="@+id/isec_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@drawable/iseclogo" />
  <TextView
         android:id="@+id/err_msg"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingBottom="20dp"
         android:paddingLeft="20dp"
         android:paddingRight="20dp"
         android:paddingTop="20dp"
         android:text=""
         android:textColor="@color/red"
         android:textAppearance="?android:attr/textAppearanceSmall"/>
 
     <CheckBox
        android:id="@+id/chkDetect"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/chk_detect"
        android:checked="false" />
     
      <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/button_getnetworkinfo"
        android:onClick="getNetworkInfo" />

     <TextView
         android:id="@+id/display_general_info"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingBottom="20dp"
         android:paddingLeft="20dp"
         android:paddingRight="20dp"
         android:paddingTop="20dp"
         android:text="@string/airplane_mode"
         android:textAppearance="?android:attr/textAppearanceSmall"/>



    
     <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/button_stoptracking"
        android:onClick="stopTracking" 
        android:visibility="invisible"/>

              <TextView
        android:id="@+id/get_radio_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
              
      

        <TextView
        android:id="@+id/get_cell_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
        <TextView
        android:id="@+id/get_service_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
       </LinearLayout></ScrollView>